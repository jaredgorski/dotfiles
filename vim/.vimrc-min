set ai
set backupdir=~/.vim/backup
set directory=~/.vim/swap
set hlsearch
set ignorecase
set incsearch
set nocompatible
set noeb vb t_vb=		" no visual bell
set number
set relativenumber
set smartcase

filetype plugin indent on

colorscheme elflord		" for search hl mainly
syntax off			" always.

highlight LineNr ctermfg=gray
